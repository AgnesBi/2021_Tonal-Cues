	shorttitle = {Production and perception of a sound change in progress},
	url = {https://www.cambridge.org/core/journals/language-variation-and-change/article/production-and-perception-of-a-sound-change-in-progress-tone-merging-in-hong-kong-cantonese/86B20574104999E6B8D438147FA1DA29},
